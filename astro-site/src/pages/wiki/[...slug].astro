---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const pages = await getCollection('wiki');

  return pages.map(page => ({
    params: { slug: page.slug },
    props: { page }
  }));
}

const { page } = Astro.props;
const { Content } = await page.render();
---

<BaseLayout title={page.data.title} description={page.data.description}>
  <article class="max-w-4xl mx-auto">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{page.data.title}</h1>
      {page.data.tags && page.data.tags.length > 0 && (
        <div class="flex gap-2">
          {page.data.tags.map(tag => (
            <span class="px-2 py-1 bg-secondary text-secondary-foreground rounded-md text-sm">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>
    <div class="prose prose-slate dark:prose-invert max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>